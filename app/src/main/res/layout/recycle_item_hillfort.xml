<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/hillfortRecycleItemImageIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/hillfortRecycleItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/hillfortRecycleItemImageIcon"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/hillfortRecycleItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hillfortRecycleItemName"
            android:layout_toEndOf="@+id/hillfortRecycleItemImageIcon"/>

        <TextView
            android:id="@+id/hillfortRecycleItemVisited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hillfortRecycleItemLocation"
            android:layout_toEndOf="@+id/hillfortRecycleItemImageIcon"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>